{
	"manifest_version": 2,
	"name": "Youtube PlaySpeed Changer",
	"version": "1.0.0",
	"description": "YouTube 動画の再生速度を % 単位で変更します。",
	"icons": {
		"16": "icon.png",
		"128": "icon128x128.png"
	},

	"permissions": [
		"tabs"
	],

	"page_action": {
		"default_icon": "icon.png", 
		"default_title": "Youtube PlaySpeed Changer",
		"default_popup": "popup.html" 
	},

  	"background": {
		"scripts": ["js/background.js"]
	},

	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"js/jquery-1.11.1.js", 
				"js/contentscript.js"
			],
			"run_at": "document_end"
		}
	]
}
